generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FleetOwnership {
  OWNED
  RENT_IN
  LEASED
}

enum DriverType {
  OUR_DRIVER
  SUPPLIER_DRIVER
}

enum RentalMode {
  MONTHLY
  DAILY
  PER_TRIP
}

enum TripStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum InvoiceType {
  CUSTOMER
  SUPPLIER
}

enum InvoiceStatus {
  PENDING
  PARTIALLY_PAID
  PAID
  CANCELLED
}

model Supplier {
  id        String    @id @default(cuid())
  name      String
  contact   String?
  email     String?
  drivers   Driver[]
  fleets    Fleet[]
  trips     Trip[]    @relation("SupplierTrips")
  invoices  Invoice[] @relation("SupplierInvoices")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String?
  address   String?
  trips     Trip[]
  invoices  Invoice[] @relation("CustomerInvoices")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Fleet {
  id          String         @id @default(cuid())
  fleetCode   String         @unique
  serial      String
  type        String
  ownership   FleetOwnership
  supplierId  String?
  supplier    Supplier?      @relation(fields: [supplierId], references: [id])
  trips       Trip[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Driver {
  id          String     @id @default(cuid())
  name        String
  phone       String
  type        DriverType
  supplierId  String?
  supplier    Supplier?  @relation(fields: [supplierId], references: [id])
  trips       Trip[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Trip {
  id             String       @id @default(cuid())
  reference      String       @unique
  description    String?
  rentalMode     RentalMode
  rate           Decimal      @db.Decimal(12, 2)
  startDate      DateTime
  endDate        DateTime
  status         TripStatus   @default(PLANNED)
  fleetId        String
  fleet          Fleet        @relation(fields: [fleetId], references: [id])
  driverId       String
  driver         Driver       @relation(fields: [driverId], references: [id])
  customerId     String
  customer       Customer     @relation(fields: [customerId], references: [id])
  supplierId     String?
  supplier       Supplier?    @relation("SupplierTrips", fields: [supplierId], references: [id])
  invoices       Invoice[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Invoice {
  id             String        @id @default(cuid())
  invoiceNumber  String        @unique
  type           InvoiceType
  status         InvoiceStatus @default(PENDING)
  amount         Decimal       @db.Decimal(12, 2)
  paidAmount     Decimal       @default(0) @db.Decimal(12, 2)
  tripId         String
  trip           Trip          @relation(fields: [tripId], references: [id])
  customerId     String?
  customer       Customer?     @relation("CustomerInvoices", fields: [customerId], references: [id])
  supplierId     String?
  supplier       Supplier?     @relation("SupplierInvoices", fields: [supplierId], references: [id])
  payments       Payment[]
  issuedAt       DateTime       @default(now())
  dueDate        DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Payment {
  id         String   @id @default(cuid())
  invoiceId  String
  invoice    Invoice  @relation(fields: [invoiceId], references: [id])
  amount     Decimal  @db.Decimal(12, 2)
  paidAt     DateTime @default(now())
  method     String?
  note       String?
  createdAt  DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  action    String
  entity    String
  entityId  String
  metadata  Json?
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
